                                <Button
                                    x:Name="ButtonStopImage"
                                    Grid.Column="1"
                                    Click="ButtonStopImage_OnClick">
                                    <materialDesign:PackIcon Name="StopImagePackIcon" Kind="Stop" />
                                </Button>

                                <Button
                                    x:Name="ButtonPlayImage"
                                    Grid.Column="2"
                                    Click="ButtonPlayImage_OnClick">
                                    <materialDesign:PackIcon Name="PlayImagePackIcon" Kind="StepForward" />
                                </Button>

                                <Button
                                    Name="ButtonPreviousImage"
                                    Grid.Column="0"
                                    Click="ButtonPreviousImage_OnClick">
